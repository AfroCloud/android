<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RelativeLayout" />


    <style name="RelativeLayout.Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/app_screen_background</item>
    </style>

    <style name="RelativeLayout.Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RelativeLayout.Splash" parent="RelativeLayout.Wrap">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:paddingBottom">@dimen/padding_8dp</item>
        <item name="android:paddingLeft">@dimen/activity_vertical_margin</item>
        <item name="android:paddingRight">@dimen/activity_vertical_margin</item>
        <item name="android:paddingTop">@dimen/activity_top_margin</item>
    </style>

    <style name="Margin" />

    <style name="Margin.RightLeft">
        <item name="android:layout_marginLeft">@dimen/material_padding</item>
        <item name="android:layout_marginRight">@dimen/material_padding</item>
    </style>
</resources>