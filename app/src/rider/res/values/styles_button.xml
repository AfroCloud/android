<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button" parent="Base.Widget.AppCompat.Button" />

    <style name="Borderless.Button" parent="Base.Widget.AppCompat.Button.Borderless" />

    <style name="Button.RectangularButton" parent="MontserratLight">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@drawable/grey_text_color</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:background">@drawable/rectangle_transparent_button_states</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="Button.RoundedBlueButton" parent="MontserratRegular">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:background">@drawable/rounded_blue_button_states</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="Borderless.Button.RoundedBrownButton" parent="MontserratRegular">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:background">@drawable/rounded_brown_button_states</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Button.RoundedWhiteButton" parent="MontserratRegular">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">10sp</item>
        <item name="android:background">@drawable/driver_details_round_button</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Button.RoundedGreyButton" parent="MontserratRegular">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:background">@drawable/rounded_promo_code_button_states</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="Button.RoundedBlueButton.RoundedTransparentButton">
        <item name="android:background">@drawable/rounded_transparent_button_states</item>
        <item name="android:textColor">@drawable/button_text_color</item>
    </style>

    <style name="Button.RoundedBlueButton.FacebookButton">
        <item name="android:background">@drawable/rounded_facebook_button_states</item>
    </style>

    <style name="Button.RoundedBlueButton.RoundedWhiteButton">
        <item name="android:background">@drawable/rounded_white_button_states</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Button.RoundedBlueButton.Margin">
        <item name="android:layout_marginTop">@dimen/default_elevation</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_vertical_margin</item>
    </style>

    <style name="Button.RoundedDarkGreyButton" parent="MontserratRegular">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:background">@drawable/rounded_dark_gray_button_states</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="Button.RectangularButton.Padded" parent="Button.RectangularButton">
        <item name="android:paddingLeft">@dimen/heterogenous_padding</item>
        <item name="android:paddingRight">@dimen/heterogenous_padding</item>
    </style>

    <style name="Button.RoundedBlueButton.Padded" parent="Button.RoundedBlueButton">
        <item name="android:paddingLeft">@dimen/heterogenous_padding</item>
        <item name="android:paddingRight">@dimen/heterogenous_padding</item>
    </style>

    <style name="Button.RoundedBlueButton.RoundedWhiteButton.LiveEta">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@drawable/rounded_white_button_small_states</item>
    </style>

    <style name="Button.ImagePopupCloseButton" parent="MontserratSemiBold">
        <item name="android:text">X</item>
        <item name="android:textSize">25dp</item> <!-- need dp here -->
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/bg_image_popup_close</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>


</resources>