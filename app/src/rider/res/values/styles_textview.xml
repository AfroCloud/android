<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RATextView" parent="@android:style/Widget.TextView" />

    <style name="RATextView.MontserratLight.Default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RATextView.MontserratLight.Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RATextView.MontserratLight.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
    </style>

    <style name="RATextView.MontserratLight.Registration">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/default_elevation</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
        <item name="android:clickable">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
    </style>

    <style name="RATextView.MontserratRegular.ThinGrey">
        <item name="android:textColor">@color/divider</item>
    </style>

    <style name="RATextView.MontserratRegular.Large">
        <item name="android:textSize">@dimen/view_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RATextView.MontserratBold.Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RATextView.MontserratBold.Large">
        <item name="android:textSize">@dimen/view_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RATextView.Info.Orange" parent="@style/RATextView.MontserratLight">
        <item name="android:paddingLeft">@dimen/padding_payment_require_button</item>
        <item name="android:paddingRight">@dimen/padding_payment_require_button</item>
        <item name="android:textSize">@dimen/font_size_payment</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">top|center_horizontal</item>
    </style>

    <style name="RATextView.Inactive" parent="@style/RATextView.MontserratLight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/payment_require_background</item>
        <item name="android:textSize">@dimen/font_size_payment</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RATextView.PaymentRequire" parent="@style/RATextView.MontserratLight">
        <item name="android:drawableRight">@drawable/icn_item_arrow_right</item>
        <item name="android:padding">@dimen/padding_payment_require_button</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textSize">@dimen/font_size_payment</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/payment_require_background</item>
    </style>

    <style name="RATextView.MontserratRegular.Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RATextView.MontserratSemiBold.Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RATextView.SpinnerItem" parent="RATextView.MontserratRegular">
        <item name="android:textSize">@dimen/spinner_item_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>