<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:descendantFocusability="blocksDescendants">

        <ImageView
            android:id="@+id/icon_payment_type"
            android:layout_width="32dp"
            android:layout_height="22dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            tools:src="@drawable/icn_visa" />

        <TextView
            android:id="@+id/text_payment_card"
            style="@style/RATextView.MontserratRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@+id/icon_payment_primary"
            android:layout_toRightOf="@+id/icon_payment_type"
            android:textColor="#2C3225"
            android:textSize="14sp"
            tools:text="Personal **** 4422" />

        <ImageView
            android:id="@+id/icon_payment_primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_blue_check"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:visibility="invisible"
            tools:visibility="visible"
            />

        <ImageButton
            android:id="@+id/btn_payment_info"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="14dp"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/icn_info_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />


        <ImageButton
            android:id="@+id/btn_payment_edit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:scaleType="center"
            android:tint="@color/tint_color"
            android:src="@drawable/ic_more_vert_black_24px" />
    </RelativeLayout>

</layout>