<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button" parent="Base.Widget.AppCompat.Button" />

    <style name="Button.RectangularButton" parent="MontserratLight">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@drawable/grey_text_color</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:background">@drawable/rectangle_transparent_button_states</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="Button.RoundedBlueButton" parent="MontserratRegular">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:background">@drawable/rounded_blue_button_states</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="Button.RoundedRedButton" parent="MontserratRegular">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:background">@drawable/rounded_red_button_states</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="Button.RoundedBlueButton.Small" parent="Button.RoundedBlueButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">@dimen/button.small.min_height</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">@dimen/button.small.vertical_padding</item>
        <item name="android:paddingRight">@dimen/button.small.vertical_padding</item>
    </style>

    <style name="Button.RoundedBlueButton.Mini" parent="Button.RoundedBlueButton.Small">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">@dimen/padding_10dp</item>
        <item name="android:paddingRight">@dimen/padding_10dp</item>
        <item name="android:minHeight">@dimen/button.mini.min_height</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Button.Button.Navigation" parent="Button.RoundedBlueButton.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:minWidth">@dimen/button.navigation.horizontal_default_width</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Button.Button.Navigation.Red" parent="Button.Button.Navigation">
        <item name="android:background">@drawable/rounded_red_button_states</item>
    </style>

    <style name="Button.Button.Navigation.Blue" parent="Button.Button.Navigation">
        <item name="android:background">@drawable/rounded_blue_button_states</item>
    </style>

    <style name="Button.Button.Navigation.Dark" parent="Button.Button.Navigation">
        <item name="android:background">@drawable/rounded_dark_button</item>
    </style>

    <style name="Button.RoundedGreyButton" parent="MontserratRegular">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:background">@drawable/rounded_promo_code_button_states</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="Button.RoundedBlackButton" parent="MontserratRegular">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:background">@drawable/rounded_black_backround</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="Button.RoundedBlueButton.RoundedTransparentButton">
        <item name="android:background">@drawable/rounded_transparent_button_states</item>
        <item name="android:textColor">@drawable/button_text_color</item>
    </style>

    <style name="Button.RoundedBlueButton.FacebookButton">
        <item name="android:background">@drawable/rounded_facebook_button_states</item>
    </style>

    <style name="Button.RoundedBlueButton.RoundedWhiteButton">
        <item name="android:background">@drawable/rounded_white_button_states</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Button.ImagePopupCloseButton" parent="MontserratSemiBold">
        <item name="android:text">X</item>
        <item name="android:textSize">25dp</item> <!-- need dp here -->
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/bg_image_popup_close</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

</resources>