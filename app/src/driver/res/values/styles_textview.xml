<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RATextView.MontserratLight.Toolbar" parent="MontserratLight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/toolbar_text_size</item>
    </style>

    <style name="RATextView.MontserratLight.Registration" parent="MontserratLight">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/default_elevation</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
        <item name="android:clickable">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
    </style>

    <style name="RATextView.MontserratRegular.Wrap">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="RATextView.MontserratRegular.ThinGrey">
        <item name="android:textColor">@color/divider</item>
    </style>

    <style name="RATextView.MontserratLight.Small">
        <item name="android:textSize">@dimen/text_size_11</item>
    </style>

    <style name="RATextView.MontserratBold.Small">
        <item name="android:textSize">@dimen/text_size_11</item>
    </style>

    <style name="RATextView.MontserratBold.Large">
        <item name="android:textSize">@dimen/view_text_size</item>
    </style>

    <style name="RATextView.Inactive" parent="@style/RATextView.MontserratLight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/payment_require_background</item>
        <item name="android:textSize">@dimen/font_size_payment</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <dimen name="text_size_10">10sp</dimen>
    <dimen name="text_size_11">11dp</dimen>

    <style name="RATextView.AirportQueue.RequestType" parent="@style/RATextView.MontserratRegular">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/charcoalGrey</item>
    </style>

    <style name="RATextView.AirportQueue.Number" parent="@style/RATextView.MontserratRegular">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">20dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <!--dp to avoid UI changes on font scaling-->
        <item name="android:textSize">25dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_vertical|right</item>
    </style>

    <style name="RATextView.FabMenu" parent="MontserratLight">
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textColor">@color/charcoalGrey</item>
        <item name="android:textSize">13sp</item>
    </style>

</resources>